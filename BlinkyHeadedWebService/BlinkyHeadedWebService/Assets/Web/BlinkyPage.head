	#onOffButton {
		width: 100px;
		height: 20px;
		font-size:20;
		text-align:center;
		margin: 2cm 0cm 0.5cm 0cm;
	}
	#circle {
		width: 100px;
		height: 100px;
		-moz-border-radius: 50px;
		-webkit-border-radius: 50px;
		border-radius: 50px;
		font-size:0;
		align
	}
	.blinkOn {
		background: red;
	}
	.blinkOff {
		background: grey;
	}
	.blinkOn:after {
		content: "STOP";
	}
	.blinkOff:after {
		content: "START";
	}
	
</style>
